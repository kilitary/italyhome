// Colors
$red = #F21200
$borderColor = #D9D9DE

// Fonts
@font-face {
  font-family: Gotham Pro
  font-style: normal
  font-weight: 400
  src: url('/assets/fonts/GothamPro.woff2') format('woff2')
}

@font-face {
  font-family: Alice
  font-style: normal
  font-weight: 400
  src: url('/assets/fonts/Alice.woff2') format('woff2')
}

//Mixins
h1() {
  font-family: Alice
  font-style: normal
  font-weight: normal
  font-size: 48px
  line-height: 125%
  @media only screen and (max-width 768px) {
    font-size: 26px
  }
}

// Styles
*
  margin: 0
  padding: 0
  outline: none

body
  font-family: Gotham Pro

.header
  height: 100px
  width: 100%
  display: flex
  justify-content: center
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.07)

  &__logo
    position: absolute
    left: 0

  &__info
    display: flex
    align-items: center
    margin-left: auto
    margin-right: auto

  &__item
    display: inline-flex
    align-items: center
    font-size: 16px
    line-height: 14px
    color: #000000
    margin-right: 40px
    text-decoration: none

    &:last-child
      margin-right: 0

    img
      margin-right: 12px

.section-main
  width: 100%
  height: 770px
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  background-image: url("/assets/img/mainbg.jpg")
  background-size: cover

  &__title
    h1()
    text-align: center
    color: #FFFFFF
    margin-bottom: 60px

  &__search
    position: relative
    width: 768px
    max-width: 100%

  &__input
    width: 100%
    height: 60px
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    border: 1px solid $borderColor
    padding: 18px 210px 18px 24px
    box-sizing: border-box
    border-radius: 75px

  &__button
    position: absolute
    right: 0
    width: 205px
    height: 60px
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 14px
    color: #fff
    background-color: $red
    border: none
    border-radius: 82px
    cursor: pointer
    transition: filter 0.3s

    &:hover
      filter: brightness(.9)

.section-zone
  height: 849px
  display: flex
  align-items: center
  justify-content: flex-end

  &__text-block
    width 410px
    max-width: 100%
    margin-right: 140px

  &__title
    h1()
    color: #000000
    margin-bottom: 20px

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    color: #000000

  &__image
    max-width: 50%

    img
      display: block
      box-shadow: 0px 4px 20px rgba(205, 179, 153, 0.5)
      width: 100%

.section-cooking
  height: 700px
  display: flex
  align-items: center
  background-image: url('/assets/img/cook.jpg')

  &__container
    width: 1200px
    max-width: 100%
    margin: 0 auto

  &__title,
  &__text
    width: 524px
    max-width: 100%

  &__title
    h1()
    margin-bottom: 20px
    color: #000000

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    color: #000000

.popup
  position: fixed
  width: 740px
  height: 440px
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  display: flex
  display none
  justify-content: center
  align-items: center
  flex-direction: column
  background-color: #fff
  padding: 0 80px
  box-sizing: border-box
  z-index: 10

  &__close-btn
    position: absolute
    top: 40px
    right: 40px
    border: none
    background-color: transparent
    cursor: pointer

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: 500
    font-size: 28px
    line-height: 125%
    color: #000000
    margin-bottom: 30px
    text-align: center

  &__link
    color: $red
    text-decoration: none

  &__link-btn
    display: inline-flex
    justify-content: center
    align-items: center
    width: 227px
    height: 59px
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 14px
    background-color: $red
    text-decoration: none
    color: #fff
    border-radius: 81px

.overlay
  display: none
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0, 0, 0, 0.5)

.footer
  background-color: #000
  color: #fff
  height: 280px
  padding: 80px 0

  &__heading
    font-family: Alice
    font-style: normal
    font-weight: normal
    font-size: 24px
    line-height: 125%
    margin-bottom: 20px

  &__down
    display: flex
    justify-content: center
    margin-top: 60px

  &__upper
    display: flex
    justify-content: center

    & > *
      width: calc(100% / 3 - 200px)
      max-width: 100%
      margin-right: 60px

      &:last-child
        margin-right: 0

  &__logos
    img
      &:first-child
        margin-right: 40px

  &__addresses
    ul
      list-style: none

      li
        font-family: Gotham Pro
        font-style: normal
        font-weight: normal
        font-size: 14px
        line-height: 35px

  &__social-item
    color: transparent

    &:first-child
      margin-right: 24px


// mobile
@media only screen and (max-width: 768px)
  .mobile-none
    display: none !important

  .header
    height: 60px

    &__logo
      img
        height: 84px

    &__info
      margin-right: 15px

  .section-main
    height: auto !important
    min-height: calc(100vh - 60px)

    &__title
      margin-bottom: 50px

    &__input
      display: block
      margin-bottom: 20px
      padding: 20px

    &__button
      position: relative
      display: block
      width: 100%

  .section-zone
    height: auto
    flex-direction: column-reverse

    &__image
      max-width 100%

      img
        display: block
        max-width: 100%
        height: auto

    &__text-block
      margin: 40px 0
      box-sizing: border-box
      padding: 0 15px
      box-sizing: border-box

  .footer
    display: flex
    justify-content: center
    height: 156px
    padding: 0 0 20px 0

    &__down
      display: flex

    &__upper
      padding: 0 15px
      justify-content: space-between
      align-items: center
      width: 100%

      & > *
        width: auto
        margin-right: 0

    &__logos
      img
        height: auto

        &:first-child
          width: 68px
          margin-right: 24px

        &:last-child
          width: 93px

// jquery ui
.ui-autocomplete
  margin: 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  transform: translateY(60px);
  border: 1px solid #D9D9DE;
  border-radius: 20px;
  padding: 15px;
  box-sizing: border-box;
  z-index: 1;

.ui-menu-item-wrapper
  width: 100%;
  padding: 15px !important;
  display: flex;
  min-height: 40px;
  align-items: center;
  box-sizing: border-box;


.ui-menu-item-wrapper
  .ui-state-active
    border: 1px solid transparent;
    background-color: transparent;
    color: #f21200;
