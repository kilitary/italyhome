// Colors
$red = #F21200
$borderColor = #D9D9DE

// mixins

h1() {
  font-family: Alice
  font-style: normal
  font-weight: normal
  font-size: 48px
  line-height: 125%
}

*
  margin: 0
  padding: 0
  outline: none

body
  font-family: Gotham Pro

.header
  height: 100px
  width: 100%
  display: flex
  justify-content: center
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.07)

  &__logo
    position: absolute
    left: 0

  &__info
    display: flex
    align-items: center
    margin-left: auto
    margin-right: auto

  &__item
    display: inline-flex
    align-items: center
    font-size: 16px
    line-height: 14px
    color: #000000
    margin-right: 40px

    &:last-child
      margin-right: 0

    img
      margin-right: 12px

.section-main
  width: 100%
  height: 770px
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  background-image: url("/assets/img/mainbg.jpg")

  &__title
    h1()
    text-align: center
    color: #FFFFFF
    margin-bottom: 60px

  &__search
    position: relative
    width: 768px
    max-width: 100%

  &__input
    width: 100%
    height: 60px
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    border: 1px solid $borderColor
    padding: 18px 210px 18px 24px
    box-sizing: border-box
    border-radius: 75px

  &__button
    position: absolute
    right: 0
    width: 205px
    height: 60px
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 14px
    color: #fff
    background-color: $red
    border: none
    border-radius: 82px
    cursor: pointer
    transition: filter 0.3s

    &:hover
      filter: brightness(.9)

.section-zone
  height: 849px
  display: flex
  align-items: center
  justify-content: flex-end

  &__text-block
    width 410px
    margin-right: 140px

  &__title
    h1()
    color: #000000
    margin-bottom: 20px

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    color: #000000

  &__image
    box-shadow: 0px 4px 20px rgba(205, 179, 153, 0.5)

.section-cooking
  height: 700px
  display: flex
  align-items: center
  background-image: url('/assets/img/cook.jpg')

  &__container
    width: 1200px
    max-width: 100%
    margin: 0 auto

  &__title,
  &__text
    width: 524px

  &__title
    h1()
    margin-bottom: 20px
    color: #000000

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 150%
    color: #000000

.popup
  display none
  position: fixed
  width: 740px
  height: 440px
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  background-color: #fff
  padding: 0 80px
  box-sizing: border-box
  z-index: 10

  &__close-btn
    position: absolute
    top: 40px
    right: 40px
    border: none
    background-color: transparent
    cursor: pointer

  &__text
    font-family: Gotham Pro
    font-style: normal
    font-weight: 500
    font-size: 28px
    line-height: 125%
    color: #000000
    margin-bottom: 30px

  &__link
    color: $red
    text-decoration: none

  &__link-btn
    display: inline-flex
    justify-content: center
    align-items: center
    width: 227px
    height: 59px
    font-family: Gotham Pro
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 14px
    background-color: $red
    text-decoration: none
    color: #fff
    border-radius: 81px

.overlay
  display: none
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0, 0, 0, 0.5)

.ui-menu
  list-style: none;
  display: block;
  outline: 0;
  margin-left: 100px;
  max-width: 650px;
